<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        android:background="@color/white"
        android:gravity="center_vertical">
        <CheckBox
            android:id="@+id/check_quanxuan"
            android:layout_width="wrap_content"
            android:checked="false"
            android:layout_height="wrap_content"
            android:button="@null"
          
            android:textSize="14sp"
            android:textColor="@color/alpha_9"
            android:drawablePadding="10dp"
            android:layout_marginLeft="10dp"

            android:drawableLeft="@drawable/quanxuan_checkbox"

            />
        <ImageView
            android:id="@+id/cartlst_img"
            android:layout_width="60dp"
            android:layout_height="80dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_launcher"/>
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:orientation="vertical"
               android:gravity="center_vertical"
               android:layout_marginLeft="10dp">
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="horizontal"
                   android:gravity="center_vertical">
                   <TextView
                       android:id="@+id/cartlst_name"
                       android:layout_width="0dp"
                       android:layout_weight="1"
                       android:layout_height="wrap_content"
                       android:textColor="@color/black"
                       android:textSize="16sp"
                       android:singleLine="true"
                       android:ellipsize="end"
                       android:text="上衣霍霍2017冲桌板"/>
                   <ImageView
                       android:id="@+id/cartlst_del"
                       android:layout_width="wrap_content"
                       android:paddingLeft="10dp"
                       android:layout_height="wrap_content"
                       android:src="@mipmap/lajitong"
                     />
               </LinearLayout>
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="horizontal"
                   android:layout_marginTop="8dp"
                   >
                   <TextView
                       android:id="@+id/cartlst_money"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:textColor="@color/theme_red"
                       android:text="￥138.00"/>
                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:gravity="right|center_vertical"
                       android:orientation="horizontal">

                       <TextView
                           android:id="@+id/tv_subtract"
                           android:layout_width="30dp"
                           android:layout_height="23dp"
                           android:background="@drawable/btn_white_grayline_left_selector_radius5"
                           android:drawableRight="@mipmap/btn_subtract_normal"
                           android:gravity="center"
                           android:paddingRight="8dp"
                           android:textColor="@color/text_color_light"
                           android:textSize="16dp" />

                       <TextView
                           android:id="@+id/tv_has_num"
                           android:layout_width="30dp"
                           android:layout_height="23dp"
                           android:layout_marginLeft="-1dp"
                           android:layout_marginRight="-1dp"
                           android:background="@drawable/bg_grayline_transparent"
                           android:gravity="center"
                           android:text="1"
                           android:textColor="@color/red"
                           android:textSize="16dp" />

                       <TextView
                           android:id="@+id/tv_add"
                           android:layout_width="30dp"
                           android:layout_height="23dp"
                           android:background="@drawable/btn_white_grayline_right_selector_radius5"
                           android:drawableLeft="@mipmap/btn_add_pressed"
                           android:gravity="center"
                           android:paddingLeft="8dp"
                           android:textColor="@color/theme_color"
                           android:textSize="16dp" />

                   </LinearLayout>
               </LinearLayout>
               <TextView
                   android:id="@+id/cartlst_guige"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:text="规格:男38"/>
           </LinearLayout>

    </LinearLayout>
</LinearLayout>
